{
  "name": "briko",
  "version": "0.0.1",
  "description": "A collection of utilities for managing LLM context and executor.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "clean": "npx rimraf dist tsconfig.tsbuildinfo",
    "prepare": "pnpm build",
    "build": "npx tsc",
    "build:watch": "npx tsc --watch",
    "build-docs": "npx typedoc",
    "build-docs:watch": "npx typedoc --watch",
    "lint": "npx eslint src/",
    "pretest": "pnpm build",
    "test": "npx mocha \"dist/**/*.spec.js\""
  },
  "keywords": [],
  "author": "Jimin Park",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/123jimin-llm/briko.git"
  },
  "bugs": {
    "url": "https://github.com/123jimin-llm/briko/issues"
  },
  "homepage": "https://github.com/123jimin-llm/briko",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.0",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "rimraf": "^6.1.2",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@google/genai": "^1.39.0",
    "@jiminp/tooltool": "github:123jimin/tooltool",
    "arktype": "^2.1.29",
    "llm-msg-io": "github:123jimin-llm/llm-msg-io",
    "openai": "^6.17.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@jiminp/tooltool",
      "llm-msg-io",
      "protobufjs"
    ]
  }
}
