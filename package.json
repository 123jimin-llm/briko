{
  "name": "briko",
  "version": "0.0.1",
  "description": "A collection of utilities for managing LLM context and executor.",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "prepare": "pnpm build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build-docs": "typedoc",
    "build-docs:watch": "typedoc --watch",
    "lint": "eslint src/",
    "pretest": "pnpm build",
    "test": "mocha \"dist/**/*.spec.js\""
  },
  "keywords": [],
  "author": "Jimin Park",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/123jimin-llm/briko.git"
  },
  "bugs": {
    "url": "https://github.com/123jimin-llm/briko/issues"
  },
  "homepage": "https://github.com/123jimin-llm/briko",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@jiminp/eslint-config": "^1.1.2",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.3.0",
    "chai": "^6.2.2",
    "eslint": "^10.0.0",
    "mocha": "^11.7.5",
    "rimraf": "^6.1.3",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@google/genai": "^1.41.0",
    "@jiminp/tooltool": "^0.3.1",
    "arktype": "^2.1.29",
    "llm-msg-io": "github:123jimin-llm/llm-msg-io",
    "openai": "^6.22.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "llm-msg-io",
      "protobufjs"
    ]
  }
}